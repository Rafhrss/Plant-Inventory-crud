generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text        // Pakai @db.Text supaya bisa simpan deskripsi panjang
  category    String
  stock       Int      @default(0)     // Tambahkan default value 0 agar tidak error jika kosong
  price       Float    @default(0.0)   // Tambahkan default value
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("plants") // Nama tabel di database jadi 'plants' (huruf kecil & jamak)
}