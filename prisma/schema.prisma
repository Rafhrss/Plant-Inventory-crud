generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  category    String
  stock       Int      @default(0)
  price       Float    @default(0.0)
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("plants")
}